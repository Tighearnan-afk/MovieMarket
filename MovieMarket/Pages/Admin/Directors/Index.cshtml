@page
@model MovieMarket.Pages.Admin.Directors.IndexModel
@{
}
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h3 class="text-primary">Director List</h3>
		</div>
		<div class="col-6">
			<a asp-page="Create" class="btn btn-primary">
				Create New Director
			</a>
		</div>
	</div>
</div>

<br />
<br />
<br />

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Film</th>
			<th>Age</th>
			<th>Years Active</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.Directors)
		{
			<tr>
				<td width="33%">@obj.Name</td>
				<td width="33%">@obj.Age</td>
				<td width="33%">@obj.YearsActive</td>
				<td>
					<a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
				</td>
				<td>
					<a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
