@page
@model MovieMarket.Pages.Admin.Films.CreateModel
@{
}
<form method="post" enctype="multipart/form-data">
<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Create New Film</h2>
		</div>

	<div class="mb-3">
		<label asp-for="@Model.Film.Name"></label>
		<input asp-for="@Model.Film.Name" class="form-control" />
		<span asp-validation-for="@Model.Film.Name" class="text-danger"></span>

		<label asp-for="@Model.Film.ReleaseDate"></label>
		<input asp-for="@Model.Film.ReleaseDate" class="form-control" />
		<span asp-validation-for="@Model.Film.ReleaseDate" class="text-danger"></span>

		<label asp-for="@Model.Film.Genre"></label>
		<input asp-for="@Model.Film.Genre" class="form-control" />
		<span asp-validation-for="@Model.Film.Genre" class="text-danger"></span>

		<label asp-for="@Model.Film.Price"></label>
		<input asp-for="@Model.Film.Price" class="form-control" />
		<span asp-validation-for="@Model.Film.Price" class="text-danger"></span>

		<label asp-for="@Model.Film.DirectorId"></label>
		<select asp-for="@Model.Film.DirectorId" asp-items="@Model.DirectorList" class="form-select">
			<option selected="Select Director" disabled></option>
		</select>
		<span asp-validation-for="@Model.Film.DirectorId" class="text-danger"></span>

		<label asp-for="@Model.Film.Image">File Upload</label>
		<input type="file" name="files" id="upload" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
</div>
</form>
@section Scripts{
	@{
		<partial name="_validationScriptsPartial" />
	}
}


