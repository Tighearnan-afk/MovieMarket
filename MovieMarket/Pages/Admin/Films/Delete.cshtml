@page
@model MovieMarket.Pages.Admin.Films.DeleteModel
@{
}
<form method="post">
	<input hidden asp-for="Film.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<div class="col-9">
				<h2 class="text-primary pl-3">Delete Film</h2>

				<div class="mb-3">
					<label asp-for="@Model.Film.Name"></label>
					<input asp-for="@Model.Film.Name" class="form-control" readonly/>
				</div>

				<div class="mb-3">
					<label asp-for="@Model.Film.ReleaseDate"></label>
					<input asp-for="@Model.Film.ReleaseDate" class="form-control" readonly />
				</div>

				<div class="mb-3">
					<label asp-for="@Model.Film.Genre"></label>
					<input asp-for="@Model.Film.Genre" class="form-control" readonly />
				</div>

				<div class="mb-3">
					<label asp-for="@Model.Film.Price"></label>
					<input asp-for="@Model.Film.Price" class="form-control" readonly />
				</div>

				<div class="mb-3">
					<label asp-for="@Model.Film.DirectorId"></label>
					<input asp-for="@Model.Film.DirectorId" readonly />
				</div>

			</div>
			<div class="col-3">
				<img src="@Model.Film.Image" />
			</div>
		</div>
		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-page="Index" class="btn btn-secondary">Back to Index</a>
	</div>
</form>
@section Scripts {
	@{
		<partial name="_validationScriptsPartial" />
	}
}



