@page
@model MovieMarket.Pages.Customer.Home.DetailsModel
@{
}
<div class="">
    <form method="post">
        <input asp-for="ShoppingCart.FilmId" hidden/>
        <input asp-for="ShoppingCart.ApplicationUserId" hidden/>

        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row ">
                        <div class="col-12 col-md-6 pt-2">
                            <h1 class="text-primary">@Model.ShoppingCart.Film.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-end pt-2">
                            <h1 class="text-muted">$@Model.ShoppingCart.Film.Price</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <h3 class="text-success"></h3>

                                        <p class="text-primary">@Model.ShoppingCart.Film.ReleaseDate</p>
                                        <p class="text-primary">@Model.ShoppingCart.Film.Director.Name</p>
                                        <p class="text-primary">@Model.ShoppingCart.Film.Genre</p>
                                        <div class="mb-3">
                                            <label asp-for="@Model.ShoppingCart.Quantity"></label>
                                            <input asp-for="@Model.ShoppingCart.Quantity" class="form-control" />
                                            <span asp-validation-for="@Model.ShoppingCart.Quantity" class="text-danger"></span>
                                        </div> 

                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ShoppingCart.Film.Image" width="100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="Index" class="btn btn-success btn-square form-control" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Add to Cart</button>
                        </div>
                        @* <div class="col-12 col-md-6 ">
                            <a asp-page="Order" button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Add to Order</a>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>